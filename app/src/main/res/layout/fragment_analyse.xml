<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentAnalyse">

        <EditText
            android:id="@+id/searchViewEdiText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shape_background_edit_text_auth"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/baseline_search_24"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="@string/search_analyse"
            android:textColorHint="@color/grey_text_color"
            android:drawablePadding="5dp" />

    <ScrollView
        android:id="@+id/scrollViewFragmentAnalyse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchViewEdiText">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewStocksAndNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textViewStocksAndNews"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/grey_text_color"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewStocksAndNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewStocksAndNews"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/textViewCatalogAnalyse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Каталог анализов"
                android:layout_below="@id/recyclerViewStocksAndNews"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/grey_text_color" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollViewCatalogAnalyse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewCatalogAnalyse"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnPopular"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Популярные"
                        android:background="@drawable/shape_btn_catalog_analyse"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:layout_marginBottom="10dp"/>

                    <Button
                        android:id="@+id/btnCovid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Covid"
                        android:background="@drawable/shape_btn_catalog_analyse_disable"
                        android:textColor="@color/grey_text_color"
                        android:textAllCaps="false"
                        android:layout_toEndOf="@id/btnPopular"
                        android:layout_marginStart="15dp"/>

                    <Button
                        android:id="@+id/btnComplex"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Комплексные"
                        android:background="@drawable/shape_btn_catalog_analyse_disable"
                        android:textColor="#939396"
                        android:textAllCaps="false"
                        android:layout_toEndOf="@id/btnCovid"
                        android:layout_marginStart="15dp"/>
                </RelativeLayout>
            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCatalog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontalScrollViewCatalogAnalyse"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" />
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        tools:ignore="BottomAppBar"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/btnEventBasket"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/shape_btn_next_auth_enable"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp">
            <ImageView
                android:id="@+id/imageViewBasket"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ico_cart"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/textViewBasket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="В корзину"
                android:layout_toEndOf="@id/imageViewBasket"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/setTextViewPriceBasket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="600 Р"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>
</RelativeLayout>